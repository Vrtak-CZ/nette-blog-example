{block #content}
	<article>
		<header>
			<h2>{$article->name}</h2>
		</header>

		<p>{$article->text}</p>

		<footer>
			<p>{$article->published|date:'Y-m-d g:ia'}</p>
		</footer>

		{control comments}
	</article>
{/block}
{block #head}
	{include #parent}
	<link rel="alternate" type="application/rss+xml" title="Comments RSS" href="{link :Rss:comments slug => $article->slug}">
{/block}
